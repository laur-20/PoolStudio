@page "/Usuario/Register/{data?}"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    #main {
        margin-left: auto;
        margin-right: auto;
    }
</style>

<main id="main">

    
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Register</h3>
                    </div>
                    <img src="~/Squadfree/assets/img/logo.png" class="mx-auto w-25">
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <input asp-for="Input.Email" placeholder="Correo" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.ConfirmPassword" placeholder="Confirmar contraseña" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-outline-primary btn-block">Registrarse</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        @section Scripts
        {
        <partial name="_ValidationScriptsPartial" />
        }
</main>